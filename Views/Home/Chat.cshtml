@{
    ViewData["Title"] = "Chat Page";
}
<h1>@ViewData["Title"]</h1>

<div class="chat-container">
    <h2>Simple Chat</h2>

    <!-- User Input Section -->
    <div class="mb-3">
        <input type="text" id="userInput" class="form-control" placeholder="Enter your name" />
    </div>

    <!-- Message Input Section -->
    <div class="mb-3">
        <textarea id="messageInput" class="form-control" placeholder="Type your message" rows="5"></textarea>
    </div>

    <!-- Send Message Button -->
    <div class="text-center">
        <button id="sendMessageButton" onclick="sendMessage()">Send Message</button>
    </div>

    <br>

    <!-- Messages List Section -->
    <div id="messagesList">
        <!-- Messages will be displayed here -->
    </div>
</div>
